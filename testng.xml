<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="AutomationSuite"
       parallel="tests"
       thread-count="2">

    <test name="UITests" parallel="methods" thread-count="3">
        <packages>
            <package name="tests.ui"/>
        </packages>
    </test>

    <test name="APITests" parallel="false">
        <packages>
            <package name="tests.api"/>
        </packages>
    </test>

</suite>
